@model Lab1.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewBag.Title = "Task Details";
    Layout = "_Layout";
}

<h2>Task Details</h2>
<table class="table">
    <tr>
        <th>Title:</th>
        <td>@Html.DisplayFor(model => model.Title)</td>
    </tr>
    <tr>
        <th>Description: </th>
        <td>@Html.DisplayFor(model => model.Description)</td>
    </tr>
    
    <tr>
        <th>Project: </th>
        <td>@Html.DisplayFor(model => model.Project.Name)</td>
    </tr>
</table>


<a asp-action="Edit" asp-route-id="@Model.ProjectTaskId" class="btn btn-warning">Edit</a>
<a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Back to List</a>