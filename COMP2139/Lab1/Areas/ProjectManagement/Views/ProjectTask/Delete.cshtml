@model Lab1.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewBag.Title = "Delete Task";
    Layout = "_Layout";
}

<h2>@ViewBag.Title</h2>

<p>Are you sure you want to delete this task?</p>

<table class="table">
    <tr>
        <th>Task Title: </th>
        <td>@Html.DisplayFor(model =>model.Title)</td>
    </tr>
    
    <tr>
        <th>Task Description: </th>
        <td>@Html.DisplayFor(model =>model.Description)</td>
    </tr>
</table>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ProjectTaskId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-primary">Cancel</a>
</form>
